        h1{
            font-size: 3rem;
            background: linear-gradient(160deg, #2623dc, #d144e1);
            background-clip: text;
            -webkit-background-clip: text;
            color: transparent;
        }
        h2{
            font-size: 2.5rem;
            color: white;
            /* horizontal|vertical shadow|blur|color */
            text-shadow: 2px 2px 10px red;
        }
        h3{
            font-size: 2rem;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000,
            -1px 1px 0 #000, 1px 1px 0 #000; color: white;        
        }
        .card{
            width: 300px;
            height: 200px;
            background: #FFFFF0;
            border-radius: 10px;
            padding: 0.2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .border-card{
            width: 300px;
            height: 100px;
            border-radius: 10px;
            background: #FFFFF0;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 8px solid transparent;
            border-image: linear-gradient(60deg, #2623dc, #d144e1) 1;
            
        }
        .card:hover{
            /* box-shadow: none|h-offset v-offset blur spread color |inset|initial|inherit; */
            box-shadow: 8px 8px 20px 2px rgba(0, 0, 0, .1), -8px -8px 10px white;
            
        }
    </style>
